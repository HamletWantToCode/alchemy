{
    "name": "AGCN_net",
    "n_gpu": 2,

    "arch": {
        "type": "AGCN",
        "args": {}
    },
    "data_loader": {
        "type": "AlchemyDataLoader",
        "args":{
            "data_dir": "/home/renhb/Data/Alchemy",
            "batch_size": 1000,
            "shuffle": true,
            "validation_split": 0.4,
            "num_workers": 5,
            "training": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": ["mse_metric"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,

        "num_tasks": 12,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
